<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:layout_marginTop="0dp">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="11dp"
        android:text="标题"
        android:textColor="#000000"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/image_update"
        android:layout_width="35dp"
        android:layout_height="35dp"
         android:layout_toLeftOf="@+id/image_delete"
        android:layout_alignBottom="@+id/txt_title"
        android:layout_marginRight="15dp"
        android:src="@drawable/note_update" />

    <ImageView

        android:id="@+id/image_delete"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignBottom="@+id/txt_title"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/opened7" />

    <TextView
        android:layout_margin="10dp"
        android:id="@+id/txt_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_delete"
        android:layout_alignParentRight="true"
        android:text="时间" />


</RelativeLayout>
